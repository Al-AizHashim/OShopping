<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:elevation="8dp"
    android:id="@+id/main_layout"
    android:background="@drawable/button_shap_white"
    android:padding="16dp"

    android:layout_margin="8dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_img"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:cardCornerRadius="250dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mag_view"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/user_img"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/user_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/NameUser"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toTopOf="@+id/user_detail"
        app:layout_constraintEnd_toEndOf="@+id/user_detail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/user_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="user type "
        android:textSize="16dp"
        android:textColor="@color/colorGray"
        app:layout_constraintBottom_toBottomOf="@+id/card_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/card_img"
        app:layout_constraintTop_toTopOf="@+id/card_img"
        app:layout_constraintVertical_bias="1.0" />



</androidx.constraintlayout.widget.ConstraintLayout>