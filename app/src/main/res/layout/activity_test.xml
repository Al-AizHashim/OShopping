<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sharedPreferences.TestActivity">

    <TextView
        android:id="@+id/email_tv"
        android:layout_width="242dp"
        android:layout_height="54dp"
        android:layout_marginTop="124dp"
        android:text="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_shared_email"
        style="@style/CustomTextView"
        android:layout_width="242dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_shap"
        android:text="show email"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_tv" />

    <EditText
        android:id="@+id/email_et"
        android:layout_width="242dp"
        android:layout_height="54dp"
        android:hint="add email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_shared_email" />

    <Button
        android:id="@+id/store_email"
        style="@style/CustomTextView"
        android:layout_width="242dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/button_shap"
        android:text="store email"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_et" />
</androidx.constraintlayout.widget.ConstraintLayout>